{
  "name": "base-flash-arb-engine",
  "version": "2.0.0",
  "description": "Production-grade Aave V3 flash loan arbitrage engine on Base chain with Hardhat",
  "main": "dist/src/engine/ArbEngine.js",
  "scripts": {
    "build": "hardhat compile && tsc",
    "start": "node dist/src/engine/ArbEngine.js",
    "dev": "ts-node src/engine/ArbEngine.ts",
    "monitor": "ts-node src/monitoring/MempoolMonitor.ts",
    
    "hardhat": "hardhat",
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "hardhat test --reporter gas-reporter",
    
    "deploy:base": "hardhat run scripts/deploy.ts --network base",
    "deploy:base:fork": "hardhat run scripts/deploy.ts --network hardhat",
    "verify": "hardhat run scripts/verify.ts --network base",
    
    "node": "hardhat node",
    "fork:base": "hardhat node --fork https://mainnet.base.org"
  },
  "dependencies": {
    "ethers": "^6.13.4",
    "axios": "^1.7.9",
    "ws": "^8.18.0",
    "dotenv": "^16.4.7",
    "winston": "^3.17.0",
    "prom-client": "^15.1.3",
    "@flashbots/ethers-provider-bundle": "^0.7.2",
    "@flashbots/protect": "^0.7.0"
  },
  "devDependencies": {
    "hardhat": "^2.22.17",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-verify": "^2.0.12",
    "@nomicfoundation/hardhat-web3": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    
    "hardhat-gas-reporter": "^2.2.2",
    "solidity-coverage": "^0.8.14",
    "@typechain/hardhat": "^9.1.0",
    "typechain": "^8.3.2",
    "@typechain/ethers-v6": "^0.5.1",
    
    "@openzeppelin/contracts": "^5.1.0",
    "@openzeppelin/hardhat-upgrades": "^3.6.0",
    
    "typescript": "^5.7.2",
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.13",
    "@types/mocha": "^10.0.9",
    "@types/chai": "^4.3.14",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}